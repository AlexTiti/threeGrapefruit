<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.findtech.threePomelos.user.activity.SettingActivity">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/toolbar_layout_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/ivUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_23"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeToolbar"
        app:srcCompat="@drawable/new_update" />

    <TextView
        android:id="@+id/tvUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/dp_10"
        android:text="@string/check_update"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/ivUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivUpdate"
        app:layout_constraintTop_toTopOf="@+id/ivUpdate" />

    <ImageView
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_19"
        android:src="@drawable/more_action"
        app:layout_constraintBottom_toBottomOf="@+id/ivUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivUpdate" />
    

    <ImageView
        android:id="@+id/ivAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_23"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivUpdate"
        app:srcCompat="@drawable/about_us" />

    <TextView
        android:id="@+id/tvAboutUs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/dp_10"
        android:text="@string/about"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/ivAbout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivAbout"
        app:layout_constraintTop_toTopOf="@+id/ivAbout" />

    <ImageView
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_19"
        android:src="@drawable/more_action"
        app:layout_constraintBottom_toBottomOf="@+id/ivAbout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivAbout" />

    <ImageView
        android:id="@+id/ivProtect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_23"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAbout"
        app:srcCompat="@drawable/user_protect" />

    <TextView
        android:id="@+id/tvUserProtect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/dp_10"
        android:text="@string/title_activity_get_user_protocol"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/ivProtect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivProtect"
        app:layout_constraintTop_toTopOf="@+id/ivProtect" />

    <ImageView
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_19"
        android:src="@drawable/more_action"
        app:layout_constraintBottom_toBottomOf="@+id/ivProtect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivProtect" />

    <include
        android:id="@+id/includeHelp"
        layout="@layout/diversion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProtect" />


    <Button
        android:id="@+id/btnLoginOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_about_text_log_out"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_18"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeHelp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/music_divider_color"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginOut" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:text="Version"
        android:textColor="#c5c5c5"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginOut" />

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.findtech.threePomelos.view.banner.BannerView
        android:id="@+id/bannerView"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_160"
        app:open_mz_mode="true"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:middle_page_cover="true"
        app:indicatorRadius="@dimen/dp_3"
        app:indicatorMarginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/iv_fluid"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintEnd_toStartOf="@+id/iv_sleep"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerView"
        app:srcCompat="@drawable/amniotic_fluid" />

    <ImageView
        android:id="@+id/iv_sleep"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        app:layout_constraintEnd_toStartOf="@+id/iv_appease"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_fluid"
        app:layout_constraintTop_toTopOf="@+id/iv_fluid"
        app:srcCompat="@drawable/icon_sleep" />

    <ImageView
        android:id="@+id/iv_appease"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        app:layout_constraintEnd_toStartOf="@+id/iv_song"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_sleep"
        app:layout_constraintTop_toTopOf="@+id/iv_sleep"
        app:srcCompat="@drawable/icon_appease" />

    <ImageView
        android:id="@+id/iv_song"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        app:layout_constraintEnd_toStartOf="@+id/iv_story"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_appease"
        app:layout_constraintTop_toTopOf="@+id/iv_appease"
        app:srcCompat="@drawable/icon_song" />

    <ImageView
        android:id="@+id/iv_story"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/iv_song"
        app:layout_constraintTop_toTopOf="@+id/iv_song"
        app:srcCompat="@drawable/icon_story" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/fluid_music"
        android:textColor="@color/text_six_one"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@+id/iv_fluid"
        app:layout_constraintStart_toStartOf="@+id/iv_fluid"
        app:layout_constraintTop_toBottomOf="@+id/iv_fluid" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sleep_music"
        android:textColor="@color/text_six_one"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@+id/iv_sleep"
        app:layout_constraintStart_toStartOf="@+id/iv_sleep"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appease_music"
        android:textColor="@color/text_six_one"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@+id/iv_appease"
        app:layout_constraintStart_toStartOf="@+id/iv_appease"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_music"
        android:textColor="@color/text_six_one"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@+id/iv_song"
        app:layout_constraintStart_toStartOf="@+id/iv_song"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stroy_music"
        android:textColor="@color/text_six_one"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@+id/iv_story"
        app:layout_constraintStart_toStartOf="@+id/iv_story"
        app:layout_constraintTop_toTopOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/music_divider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_18"
        android:text="@string/music_hot"
        android:textColor="@color/text_six_one"
        android:textSize="@dimen/sp_19"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/tvAllSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_19"
        android:text="@string/all_song"
        android:textColor="@color/grey_color"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="@+id/textView21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView21" />

    <ImageView
        android:id="@+id/ivFirst"
        android:layout_width="@dimen/dp_153"
        android:layout_height="@dimen/dp_96"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        android:scaleType="fitCenter"
       />

    <ImageView
        android:id="@+id/ivSecond"
        android:layout_width="@dimen/dp_153"
        android:layout_height="@dimen/dp_96"
        android:layout_marginEnd="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
         />

    <ImageView
        android:id="@+id/ivFourth"
        android:layout_width="@dimen/dp_153"
        android:layout_height="@dimen/dp_96"
        android:layout_marginEnd="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        />

    <ImageView

        android:id="@+id/ivThird"
        android:layout_width="@dimen/dp_153"
        android:layout_height="@dimen/dp_96"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24"
         />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="TextView"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_e"
        app:layout_constraintStart_toStartOf="@+id/ivFirst"
        app:layout_constraintTop_toBottomOf="@+id/ivFirst" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="TextView"
        android:textColor="@color/text_e"
        app:layout_constraintStart_toStartOf="@+id/ivSecond"
        app:layout_constraintTop_toBottomOf="@+id/ivSecond" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="TextView"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_e"
        app:layout_constraintStart_toStartOf="@+id/ivThird"
        app:layout_constraintTop_toBottomOf="@+id/ivThird" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="TextView"
        android:textColor="@color/text_e"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@+id/ivFourth"
        app:layout_constraintTop_toBottomOf="@+id/ivFourth" />

    <TextView
        android:id="@+id/tv_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@color/music_divider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_18"
        android:text="@string/music_for_baby"
        android:textColor="@color/text_six_one"
        android:textSize="@dimen/sp_19"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_divider" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewMusic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />


</android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>